                    android:textColor="@color/color_333333" />


                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/case03_sea_charge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入费用"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--送检医生-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_20"
                    android:text="送检医生:"
                    android:textColor="@color/color_333333" />


                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/case03_doctor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/white"
                    android:hint="请输入送检医生姓名"

                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- 从这里开始 下拉选择框和edit一起使用  -->
            <!--设备-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_20"
                    android:text="设备:"
                    android:textColor="@color/color_333333" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <com.hjq.widget.view.ClearEditText
                        android:id="@+id/case03_device"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择设备"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_case_device"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_add" />

                </LinearLayout>


            </LinearLayout>
            <!--科室-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_20"
                    android:text="科室:"
                    android:textColor="@color/color_333333" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <com.hjq.widget.view.ClearEditText
                        android:id="@+id/case03_office"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请选择科室"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/padding_10"
                        android:singleLine="true"
                        android:textColor="@color/color_333333"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/iv_case_office"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/icon_add" />
                </LinearLayout>


            </LinearLayout>
            <!--主述-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_20"
